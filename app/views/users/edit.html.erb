<%= form_for([@group, @user], html: { class: "form" }) do |form| %>
	<%= form.label :email %> 
	<%= form.text_field :email, placeholder: @user.email %>
	<%= form.label :subscribe_to_weekly_emails? %>
	<%= select(:user, :subscribed, [['Yes', true], ['No', false]]) %>
	<%= form.label :receive_email_reminding_you_to_post? %>
	<%= select(:user, :post_reminder, [['Yes', true], ['No', false]]) %><br/>
	<%= form.submit "Update", class: "btn" %>
<% end %>