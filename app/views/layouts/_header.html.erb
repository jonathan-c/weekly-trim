<header class="navbar navbar-fluid-top navbar-inverse">
  <div class="navbar-inner">
	<div class="nav-collapse collapse">
    <div class="container">
			<% if current_user %>
			<%= link_to "Weekly Trim", welcome_path, id: "logo" %>
			<% else %>
      <%= link_to "Weekly Trim", root_path, id: "logo" %>
			<% end %>
			<!--<%= image_tag("logo.jpg", style: "max-width:600px", id: "headerImage", width: "200px") %>-->
 			<nav>
	 			<ul class="nav pull-right">
			<% if current_user %>
					<li class="dropdown" id="admin_menu">
				    <a class="dropdown-toggle" data-toggle="dropdown">
				      My Groups
				      <b class="caret"></b>
				    </a>
				    <ul class="dropdown-menu">
								<li><%= link_to "Create group", new_group_path %></li>
				      	<% current_user.groups.each do |group| %>
									<li><%= link_to group.name, group_path(group.id) %></li>
				      	<% end %>
				    </ul>
				  </li>
					<%= yield :nav %>
          <li><%= link_to "Sign out", signout_path %></li>
					<% else %>
						<li><%= link_to "Sign in", root_path %></li>
					<% end %>
        </ul>
      </nav>
    </div>
	</div>
  </div>
</header>


