<div class="navbar-wrapper">
  <!-- Wrap the .navbar in .container to center it within the absolutely positioned parent. -->
  <div class="container">
	<div class="navbar navbar-inverse">
			<div class="navbar-inner">
    	<!-- Responsive Navbar Part 1: Button for triggering responsive navbar (not covered in tutorial). Include responsive CSS to utilize. -->
			<button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
			<% if current_user %>
			<a class="brand" href="<%= welcome_path %>"> <img src="http://i.imgur.com/v7iwNWg.png"></a>
			<% else %>
			<a class="brand" href="<%= root_path %>"> <img src="http://i.imgur.com/v7iwNWg.png"></a>
			<% end %>

	 		<div class="nav-collapse collapse">
				<ul class="nav pull-right">
			<% if current_user %>
					<!-- Read about Bootstrap dropdowns at http://twitter.github.com/bootstrap/javascript.html#dropdowns -->
					<li class="dropdown">
				    <a class="dropdown-toggle" data-toggle="dropdown">My Groups<b class="caret"></b></a>
				    <ul class="dropdown-menu">
								<li><a href="<%=  new_group_path %>">Create Group</a></li>
				      	<% current_user.groups.each do |group| %>
									<li><a href="<%= group_path(group) %>"><%= group.name %></a></li>
				      	<% end %>
				    </ul>
				  </li>
					<%= yield :nav %>
          <li><%= link_to "Sign out", signout_path %></li>
					<% else %>
						<li><%= link_to "Sign in", root_path %></li>
					<% end %>
        </ul>
        </div><!--/.nav-collapse -->
      </div><!-- /.navbar-inner -->
    </div><!-- /.navbar -->
  </div> <!-- /.container -->
</div><!-- /.navbar-wrapper -->